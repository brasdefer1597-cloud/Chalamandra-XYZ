{
  "manifest_version": 3,
  "name": "Chalamandra QuantumMind XYZ",
  "version": "1.0.0",
  "description": "A Dialectical AI thinking partner. Thesis, Antithesis, and Synthesis powered by Hybrid AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
