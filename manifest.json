{
  "manifest_version": 3,
  "name": "Chalamandra QuantumMind",
  "version": "1.0.0",
  "description": "Dialectical AI Engine.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/16.png",    <-- CORREGIDO
      "48": "assets/48.png",    <-- CORREGIDO
      "128": "assets/128.png"   <-- ASUMIENDO 128.png
    }
  },
  "icons": {
    "16": "assets/16.png",      <-- CORREGIDO
    "48": "assets/48.png",      <-- CORREGIDO
    "128": "assets/128.png"     <-- ASUMIENDO 128.png
  }
}
